<p style="color: green"><%= notice %></p>

<%= render @line_item %>

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 16px;">
  <div style="display: flex; align-items: center; gap: 8px;">
    <%= link_to "Edit this line item", edit_line_item_path(@line_item) %>
    <span>|</span>
    <%= link_to "Back to line items", line_items_path %>
  </div>

  <%= button_to "Destroy this line item", @line_item, method: :delete, style: "margin-top: 8px;" %>
</div>
