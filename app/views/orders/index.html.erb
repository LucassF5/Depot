<div class="mx-auto w-full">
  <p style="color: green"><%= notice %></p>

  <h1 class="font-bold text-4xl mb-4 ">Orders</h1>

  <div id="orders">
    <% @orders.each do |order| %>
      <%= render order %>
      <p>
        <%= link_to "Show this order", order %>
      </p>
    <% end %>
  </div>

  <%= link_to "New order", new_order_path %>
</div>
