<div class="container mx-auto w-full px-4 py-6">

  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">

  <section class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold">Orders</h1>
    <%= link_to "New Order", new_order_path, class: "general-button" %>
  </section>

  <div id="orders" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @orders.each do |order| %>
      <div class="border rounded-lg shadow p-4 bg-green-100 text-red">
        <%= render order %>
        <div class="mt-4">
          <%= link_to "Show this order", order, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
    <% end %>
  </div>


</div>
